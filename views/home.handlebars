{{!-- sign up modal --}}
<div id="signUpModal" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content login-modal-content">

      <form class="form-signin needs-validation" novalidate>
        <div class="text-center mb-4">
          <img class="mb-4" src="./images/favicon2.png" alt="" width="72" height="72">
          <h1 class="h3 mb-3 font-weight-normal">Book Buddies</h1>
          <p>Sign up information</a></p>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="reg-inputEmail">Email address</label>
              <input type="email" id="reg-inputEmail" class="form-control" placeholder="Email address" autocomplete="email"
                required autofocus>
              <div class="invalid-feedback"> Please fill in this field. </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="reg-inputPassword">Password</label>
              <input type="password" id="reg-inputPassword" class="form-control" placeholder="Password" autocomplete="current-password"
                required>
              <div class="invalid-feedback"> Please fill in this field. </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-label-group">
              <label for="reg-inputPassword-verify">Verify Password</label>
              <input type="password" id="reg-inputPassword-verify" class="form-control" placeholder="Re-type Password"
                autocomplete="current-password" required>
              <div class="invalid-feedback"> Passwords must match. </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="firstName">First name:</label>
              <input type="text" class="form-control" id="reg-firstName" autocomplete="name" required>
              <div class="invalid-feedback"> Please fill in this field. </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="lastName">Last name:</label>
              <input type="text" class="form-control" id="reg-lastName" autocomplete="name" required>
              <div class="invalid-feedback"> Please fill in this field</div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="userName">Username:</label>
              <input type="text" class="form-control" id="reg-userName" autocomplete="name" required>
              <div class="invalid-feedback"> Please fill in this field </div>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <label for="reg-userSchool">School:</label>
              <input id="reg-userSchool" type="text" name="school" class="form-control" placeholder="School (optional)"
                autocomplete="school">
            </div>
          </div>

        </div>

        <div class="row">
          <div class="col-md-6">

            <div class="form-group">
              <label for="userPhone">Phone</label>
              <input id="reg-userPhone" type="tel" name="phone" class="form-control" placeholder="Phone number"
                autocomplete="phone" required>
              <div class="invalid-feedback"> Please fill in this field. </div>
              <div class="help-block with-errors"></div>

            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <label for="userPostalCode">Postal Code</label>
              <input id="reg-userPostalCode" type="tel" name="postalCode" class="form-control" placeholder="Postal code"
                autocomplete="postalCode" required>
              <div class="invalid-feedback"> Please fill in this field. </div>
              <div class="help-block with-errors"></div>

            </div>
          </div>
        </div>

        <div class="form-label-group">
          <p id="signUpErrorMessage" class="text-danger"></p>
        </div>

        <div class="form-label-group">
          <p id="signUpErrorMessage" class="text-danger"></p>
        </div>

        <button id="sign-up-button" class="btn btn-primary" type="submit">Sign Up</button>
        <p class="mt-3 mb-3 text-muted text-center">&copy; 2018</p>
      </form>

    </div>
  </div>
</div>

