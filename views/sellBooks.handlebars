<section class="book-search-container">
    <div class="row">
        <div class="col-md-12">
            <h5>How would you like to enter your book information?</h5>
        </div>
    </div>

    <div class="search-options">
        <div class="row radio-row">
            <div class="col-md-4">
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="search-method" value="title">Search by Title
                    </label>
                </div>
                <input type="text" id="title-search-input" placeholder="Input title">
            </div>

            <div class="col-md-4">
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="search-method" value="isbn">Search by ISBN
                    </label>
                </div>
                <input type="text" id="isbn-search-input" placeholder="Input ISBN">
            </div>

            <div class="col-md-4">
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="search-method" value="manual">Enter book
                        info
                        manually
                    </label>
                </div>
            </div>
        </div>

        <button id="book-search-button">Go</button><br>
    </div>
</section>


{{!-- modal for book search results --}}
<div class="modal fade" id="postBookModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Posting details:</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h5 class="card-title post-modal-bookTitle"></h5>
                <h6 class="card-text post-modal-bookAuthor"></h6>
                <h6 class="card-text post-modal-bookCategory"></h6>
                <h6 class="card-text post-modal-bookISBN"></h6>
                <form>
                    <div class="form-group">
                        <label for="sel1">Book condition:</label>
                        <select class="form-control" id="condition-select">
                            <option>Almost New</option>
                            <option>Mint</option>
                            <option>Fair</option>
                            <option>Poor</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Asking price:</label>
                        <input class="form-control" id="price-input"></input>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Comments:</label>
                        <input class="form-control" id="comment-input"></input>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Email:</label>
                        <span class="form-control" id="sellerEmail"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="post-to-DB">Create Posting</button>
            </div>
        </div>
    </div>
</div>

